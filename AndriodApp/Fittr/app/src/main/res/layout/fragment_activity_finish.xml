<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="380dp"
    android:layout_height="300dp"
    android:background="?attr/colorOnSecondary"
    android:elevation="30dp"
    >

    <LinearLayout
        android:id="@+id/layoutHeader"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/grey">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src = "@drawable/cyclist"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Activity Report"
            android:textSize="20dp"
            android:gravity="center"
            android:fontFamily="sans-serif-medium"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutActivity"
        android:layout_below="@+id/layoutHeader"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="Activity Type"
            android:textSize="17dp"
            android:gravity="center"
            android:fontFamily="sans-serif-condensed"
            />

        <ImageView
            android:id="@+id/activityIcon"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src = "@drawable/ic_baseline_directions_run_24"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutKms"
        android:layout_below="@+id/layoutActivity"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="3"
            android:src = "@drawable/km_2"
            />

        <TextView
            android:id="@+id/kmsCount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:textSize="17dp"
            android:text="3.00"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutCoins"
        android:layout_below="@+id/layoutKms"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="3"
            android:src = "@drawable/money"
            />


        <TextView
            android:id="@+id/coinsCount"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:textSize="17dp"
            android:text="2000000000"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutLevel"
        android:layout_below="@+id/layoutCoins"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="3"
            android:src = "@drawable/levelup"
            />


        <TextView
            android:id="@+id/level"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="@color/yellow"
            android:text="1"
            android:textSize="25dp"/>

    </LinearLayout>

