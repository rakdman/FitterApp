<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Fittr" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_500</item>
        <item name="colorSecondaryVariant">#5B6060</item>
        <item name="colorOnSecondary">#B5BDBD</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Fittr.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Fittr.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Fittr.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="fapTheme" parent="Widget.MaterialComponents.FloatingActionButton" >
        <item name="colorOnSecondary">@color/white</item>
    </style>




</resources>